<!DOCTYPE html>
<html>
  <head>
    <title>Signup Form</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <h2>{{ User.name}}</h2>
    <h3 id="x">{{User.email }}</h3>
  <h3>{{ User.balance }}</h3>
  <br>
    <form action="/transfer" method="post">
          <h1>Transfer Money</h1>
            <input type="text" id="sender" name="sender" readonly>
            <input
              class="box"
              type="email"
              name="to"
              id="email"
              placeholder="E-Mail "
              required
            /><br />

            <input
              class="box"
              type="number"
              name="amount"
              id="amount"
              placeholder="Amount "
              required
            /><br />
            <br />
            <input
              type="submit"
              id="submitDetails"
              name="submitDetails"
              value="Submit"
            /><br />
    </form>
  </body>
  <script>
  var x = document.getElementById("x").innerText;
  document.getElementById("sender").value=x;
</script>
</html>